{
	"name": "floyd-web",
	"version": "1.0.0",
	"description": "The web application for Floyd CI",
	"author": "The Floyd CI authors",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/floyd-ci/floyd-web.git"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^1.2.0",
		"ava": "^2.1.0",
		"bulma": "^0.7.5",
		"coveralls": "^3.0.4",
		"esm": "^3.2.25",
		"node-sass": "^4.12.0",
		"nyc": "^14.1.1",
		"rollup": "^1.15.6",
		"rollup-plugin-browsersync": "^1.0.0",
		"rollup-plugin-copy": "^3.0.0",
		"rollup-plugin-node-resolve": "^5.0.3",
		"rollup-plugin-postcss": "^2.0.3",
		"rollup-plugin-svelte": "^5.1.0",
		"rollup-plugin-terser": "^5.0.0",
		"svelte": "^3.5.3",
		"xo": "^0.24.0"
	},
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "rollup -c",
		"start": "rollup -cw",
		"test": "xo && nyc ava",
		"coverage": "nyc report --reporter=text-lcov | coveralls"
	},
	"ava": {
		"require": ["esm"]
	},
	"xo": {
		"envs": ["browser"],
		"rules": {
			"camelcase": "off",
			"comma-dangle": ["error", "always-multiline"],
			"max-len": ["error", {"code": 80, "tabWidth": 8}]
		}
	}
}
